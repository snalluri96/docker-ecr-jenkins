pipeline {
    agent any

    environment {
        AWS_REGION = "us-east-1"
        REPO_URI = "123456789012.dkr.ecr.us-east-1.amazonaws.com/my-docker-repo"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/<your-username>/docker-ecr-jenkins.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t my-docker-app ."
                }
            }
        }

        stage('Login to ECR') {
            steps {
                script {
                    sh "aws ecr get-login-password --region $AWS_REGION | docker login --username AWS --password-stdin $REPO_URI"
                }
            }
        }

        stage('Tag & Push Image') {
            steps {
                script {
                    sh """
                        docker tag my-docker-app:latest $REPO_URI:latest
                        docker push $REPO_URI:latest
                    """
                }
            }
        }
    }
}
