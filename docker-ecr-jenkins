pipeline {
    agent any

    environment {
        AWS_REGION = "us-east-1"
        ECR_REPO = "533267438223.dkr.ecr.us-east-1.amazonaws.com/my-docker-repo"
    }

    stages {
        stage('Checkout') {
            steps {
                // Replace with your actual GitHub repo
                git branch: 'main', url: 'https://github.com/snalluri96/docker-ecr-jenkins.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image and tag it with ECR repo
                    dockerImage = docker.build("${ECR_REPO}:latest")
                }
            }
        }

        stage('Login to ECR') {
            steps {
                sh '''
                aws ecr get-login-password --region $AWS_REGION | \
                docker login --username AWS --password-stdin $ECR_REPO
                '''
            }
        }

        stage('Push to ECR') {
            steps {
                script {
                    // Push Docker image to ECR
                    dockerImage.push("latest")
                }
            }
        }
    }
}
